{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "allowJs": true,
    "declaration": false,
    "removeComments": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@constants/*": [
        "./src/constants/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@schemas/*": [
        "./src/schemas/*"
      ]
    }
  }
}
